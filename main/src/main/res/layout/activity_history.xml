<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <EditText
        android:id="@+id/testEdit"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:layout_alignBottom="@+id/date1"
        android:layout_toEndOf="@+id/pick_date"
        android:hint="Location"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pick_date"
        android:layout_marginEnd="128dp"
        android:background="@android:color/holo_red_light"
        android:text="Submit"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="137dp" />


    <ListView
        android:id="@+id/listViewTest"
        android:layout_width="368dp"
        android:layout_height="356dp"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="8dp"
        android:isScrollContainer= "false"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/amountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/testEdit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="74dp"
        android:hint="Amount ($)"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="48dp" />

    <EditText
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/testEdit"
        android:layout_alignParentEnd="true"
        android:inputType="number"
        android:hint="Rating"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="48dp" />


    <TextView
        android:id="@+id/date1"
        android:layout_width="94dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/pick_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:onClick="showDatePickerDialog"
        android:text="Select date" />





</RelativeLayout>